<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameSave Home</title>
    <link rel="icon" href="/logo.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/styles.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</head>
<body>
    <% if(login){ %>
        <%- include('./partials/user-header'); %>
    <% } else { %>
        <%- include('./partials/non-user-header'); %>
    <% } %>
        <div class="container">
            <section id="title-bar">
                <h1 class="brand">GameSave</h1>
                <p class="tagline">Save More, Buy More</p>
            </section>
            <div class="divider">
                <section id="latest-deals">
                    <h2>Epic Free Games</h2>

                    <h2>This Week</h2>
                    <% items.forEach(function(item) { %>
                    <div class="card">
                        <div class="card-horizontal">
                            <div class="card-body">
                                <table>
                                    <tbody>
                                        <tr>
                                            <th>Game</th>
                                            <td><%= item.title %></td>
                                        </tr>
                                        <tr>
                                            <th>Regular Price</th>
                                            <td><%= JSON.stringify(item.price.totalPrice.fmtPrice.originalPrice).replace(/"|CA/g, '') %></td>
                                        </tr>
                                        <tr>
                                            <th>Sale Price</th>
                                            <td>Free</td>
                                        </tr>
                                        <tr>
                                            <th>Retailer</th>
                                            <td>Epic Games</td>
                                        </tr>
                                        <tr>
                                            <th>Buy Now</th>
                                            <td><a href="https://www.epicgames.com/store/en-US/p/<%= item.productSlug %>" >Link</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="img-square-wrapper"><img class="card-img-right"
                                src="<%= item.keyImages[0].url %>" width="250" height="250" alt="Game Picture Unavailable"/>
                            </div>
                        </div>
                    </div>
                    <% }); %>


                    <h2>Next Week</h2>
                    <% future.forEach(function(item) { %>
                    <div class="card">
                        <div class="card-horizontal">
                            <div class="card-body">
                                <table>
                                    <tbody>
                                        <tr>
                                            <th>Game</th>
                                            <td><%= item.title %></td>
                                        </tr>
                                        <tr>
                                            <th>Regular Price</th>
                                            <td><%= JSON.stringify(item.price.totalPrice.fmtPrice.originalPrice).replace(/"|CA/g, '') %></td>
                                        </tr>
                                        <tr>
                                            <th>Sale Price</th>
                                            <td>Free</td>
                                        </tr>
                                        <tr>
                                            <th>Retailer</th>
                                            <td>Epic Games</td>
                                        </tr>
                                        <tr>
                                            <th>Buy Now</th>
                                            <td><a href="https://www.epicgames.com/store/en-US/p/<%= item.productSlug %>" >Link</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="img-square-wrapper"><img class="card-img-right"
                                src="<%= item.keyImages[0].url %>" width="250" height="250" alt="Game Picture Unavailable"/></div>
                        </div>
                    </div>
                    <% }); %>

                </section>
                <section id="featured">
                    <h2>Featured</h2>
                    <% steam.forEach(function(item) { %>

                        <div class="card">
                            <div class="card-horizontal">
                                <div class="card-body">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <th>Game</th>
                                                <td><%= item.name %></td>
                                            </tr>
                                            <tr>
                                                <th>Regular Price</th>
                                                <td class="retailPrice">$<%= item.original_price.toString().substring(0,item.original_price.toString().length-2)+"."+item.original_price.toString().substring(item.original_price.toString().length-2) %></td>
                                            </tr>
                                            <tr>
                                                <th>Sale Price</th>
                                                <td class="salePrice">$<%= item.final_price.toString().substring(0,item.final_price.toString().length-2)+"."+item.final_price.toString().substring(item.final_price.toString().length-2) %></td>
                                            </tr>
                                            <tr>
                                                <th>Platform</th>
                                                <td>Steam</td>
                                            </tr>
                                            <tr>
                                                <th>Buy Now</th>
                                                <td><a href="https://store.steampowered.com/app/<%= item.id %>" >Link</a></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="img-square-wrapper"><img class="card-img-right" src="<%= item.small_capsule_image %>" /></div>
                            </div>
                        </div>
                      <% }); %>

                    

                </section>
            </div>
        </div>
</body>
</html>