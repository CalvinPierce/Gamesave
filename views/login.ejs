<!DOCTYPE html>
<head>
    <title>Game Save</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/styles.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('./partials/non-user-header'); %> <!--Adds the header for a non logged in user -->
    <section id="login">
        <div class="container d-flex flex-column justify-content-center align-items-center">
            <h1>Sign In</h1>
            <form id="loginform" action="#" class="form-group">
                <input type="email" id="email" name="email" placeholder="johndoe@email.com" /><br>
                <input type="password" id="password" name="password" placeholder="Password" /><br>
                <input type="checkbox" id="showpass" onclick="showPassword()" name="showpass" />
                <label for="showpass">Show Password</label><br>
                <button type="submit" class="btn btn-light" value="Submit">Submit</button>
            </form>
            <a href="/register"><button type="button" class="btn btn-dark">Register</button></a>
            <a href="request-reset-password.html"><button type="button" class="btn btn-dark">Reset Password</button></a>
        </div>
    </section>
    <script>
        function showPassword() {
            let x = document.getElementById("password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
</body>